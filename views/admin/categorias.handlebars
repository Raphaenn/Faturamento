<div class="categorias">
<h2>Lista de itens do Oracle </h2>
<hr>

<a href="/admin/addcategorias"><button class="btn btn-success" >Novo cadastro</button></a>
</div>

<div class="album py-5">
    <div class="container">

      <div class="row">
          {{#each naturezas}}
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <svg class="bd-placeholder-img card-img-top" width="100%"  xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail">
            
            <title>Nome</title><rect width="100%" height="100%" fill="#55595c"/><text class="cat" x="10%" y="50%" fill="#eceeef">{{nome}}</text></svg>
            <div class="card-body">
              <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
              <div class="d-flex justify-content-between align-items-center">
              <a href="categorias/editar/{{_id}}"><button class="btn btn-success mt-3">Editar</button></a>
            <form action="/admin/categorias/remove" method="POST">
            <input type="hidden" name="id" value="{{_id}}">
            <button type="submit" class="btn btn-danger mt-3">Remover</button>
            </form>
              <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
          
        </div>
         {{else}}
        <h4 class="mt-3">Nenhum item registrado</h4>
        {{/each}}

    </div>
    </div>
    </div>
