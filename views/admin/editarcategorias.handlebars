<div class="editcategorias">

{{#each erros}}
<div class="alert alert-danger"> {{texto}} </div>
{{else}}

{{/each}}

<h2>Editar Categorias</h2>
<hr>

<form action="/admin/categorias/editar" class="formulario" method="POST" >

  <div class="form-group">
    <input type="hidden" name="id" value="{{naturezas._id}}">
    <label>Nome</label>
    <input type="text" name="nome" id="nome" class="form-control" placeholder="Digite seu Nome" value="{{naturezas.nome}}">
  </div>
  <div class="form-group">
    <label>Área:</label>
    <input type="text" name="area" id="area" class="form-control" placeholder="Digite aqui" value="{{naturezas.area}}">
  </div>
  <button type="submit" class="btn btn-primary">Salvar Alaterações</button>

</form>

</div>