<div class="categorias">
<h2>Lista de fornecedores </h2>
<hr>

<a href="/admin/addfornecedor"><button class="btn btn-success" >Novo fornecedor</button></a>
</div>

<div class="album py-5">
<div class="container">
<div class="row">

{{#each fornecedores}}

<div class="col-md-4">
<div class="card mb-4" style="width: 18rem;">
  <div class="card-body text-white bg-info">
    <h3 class="card-title text-white bg-info mb-3">{{nome}}</h3>
    <p class="card-text">CNPJ: {{cnpj}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item active list-group-item-action list-group-item-secondary">Status de envios</li>
    <li class="list-group-item">Fevereiro: Pendente</li>
    <li class="list-group-item">Janeiro: 01/01/2019</li>
    <li class="list-group-item">Dezembro: 30/12/2019</li>
  </ul>
  <div class="d-flex justify-content-between align-items-center">
    <a href="/admin/fornecedores/{{nome}}" class="card-link" style="margin-left: 4em;"><button class="btn btn-info">Detalhe</button></a>
    <form action="/admin/fornecedor/remove" method="POST">
      <input type="hidden" name="id" value="{{_id}}">
      <button type="submit" class="btn btn-danger mb-2 mt-2" style="margin-right: 2em;">Excluir <i class="icon ion-md-trash"></i></button>
    </form>
  </div>

</div>
</div>

{{else}}
      <h4 class="mt-3">Nenhum fornecedor cadastrado</h4>
{{/each}}

</div>
</div>
</div>